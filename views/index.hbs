<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->


<div class="container mt-5">
  
  {{!-- <div class="m-2">{{{alert}}}</div> --}}
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{!-- <p class="d-flex justify-content-center">{{{alert}}}</p> --}}
      
        
        {{#each restaurants}}
        <div class="container">
          <a href="./restaurantlists/{{ this._id }}" class="text-secondary">
            <div class="card mb-1 mt-2">
              <img class="card-img-top" src="{{this.image}}"
                alt="{{ this.name }}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>{{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
            <div class="d-flex flex-row-reverse p-3" >
              <form action="./restaurantlists/{{ this._id }}/delete" method="POST" class="minus-btn">
                <button class="minus-btn btn-light btn-outline-light m-1 d-flex justify-content-end " title="從清單中移除"><i class="fa-solid fa-circle-minus rounded-pill fa-lg"></i></button>
              </form>
              
              <a href="./restaurantlists/{{ this._id }}" class="detail-btn" >
                <i class="recommend-btn m-1 d-flex justify-content-end fa-solid fa-circle-info fa-lg" title="餐廳資訊"></i></a>
              
              <a href="./restaurantlists/{{ this._id }}/edit" class="edit-btn"><i
                  class="edit-btn m-1 d-flex justify-content-end fa-solid fa-pen-to-square fa-lg" title="編輯我的口袋清單"></i></a>
        
            </div>
          </a>
        </div>
        {{/each}}
  
      </div>
    </div>
  </div>
</div>