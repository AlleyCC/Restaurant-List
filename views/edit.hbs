<div class="container mt-5">
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner text-center">
        <h4 class="mb-2">Renew My Pocket List</h4>
      </div>
    </div>
  </div>
  
  <div class="container row justify-content-center " style="width: 75%; margin: 2em auto;">
    <form action="/restaurantlists/{{ restaurant._id }}?_method=PUT" method="POST">
      <div class="mb-3 d-flex flex-column">
        <label for="name">餐廳:</label>
        <input name="name" type="text" style="width: 80%" placeholder="Name..." aria-describedby="basic-addon1" value="{{ restaurant.name }}">
        <div class="mb-3 d-flex flex-column">
          <label for="category">餐廳類型:</label>
          <select name="category" class="form-select" aria-label="Default select example" value="{{restaurant.category}}">
            <option value="日本料理">日本料理</option>
            <option value="義式料理">義式料理</option>
            <option value="美式料理">美式料理</option>
            <option value="中東料理">中東料理</option>
          </select>
        </div>
        <div class="mb-3 d-flex flex-column">
          <label for="phone">電話號碼:</label>
          <input name="phone" type="text" placeholder="ex:09xxxxxxxx" value="{{ restaurant.phone }}">
  
  
        </div>
        <div class="mb-3 d-flex flex-column">
          <label for="location">地址:</label>
          <input name="location" type="text" placeholder="地點..." value="{{ restaurant.location }}">
        </div>
        <div class="mb-3 d-flex flex-column">
          <label for="image">餐廳照片:</label>
          <input type="file" id="myFile" name="image" value="{{ restaurant.image }}">
        </div>
        <div class="mb-3 d-flex flex-column">
          <label for="description" class="form-label">寫下你的評論:</label>
          <textarea name="description" class="form-control" rows="4" >{{ restaurant.description }}</textarea>
        </div>
  
        <button type="submit" class="update-btn btn-primary">更新</button>
        <a href="/"><button type="button" class="back-btn btn-primary ml-2">取消</button></a>
    </form>
  </div>
  
</div>